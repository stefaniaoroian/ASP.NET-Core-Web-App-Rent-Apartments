@page
@model Apartments.Pages.Apartmentss.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apartment.ID" />
            <div class="form-group">
                <label asp-for="Apartment.Title" class="control-label"></label>
                <input asp-for="Apartment.Title" class="form-control" />
                <span asp-validation-for="Apartment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.OwnerID" class="control-label"></label>
                <select asp-for="Apartment.OwnerID" class="form-control" asp-items="ViewBag.OwnerID"></select>
                <span asp-validation-for="Apartment.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Price" class="control-label"></label>
                <input asp-for="Apartment.Price" class="form-control" />
                <span asp-validation-for="Apartment.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Date" class="control-label"></label>
                <input asp-for="Apartment.Date" class="form-control" />
                <span asp-validation-for="Apartment.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.AgentID" class="control-label"></label>
                <select asp-for="Apartment.AgentID" class="form-control" asp-items="ViewBag.AgentID"></select>
                <span asp-validation-for="Apartment.AgentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
